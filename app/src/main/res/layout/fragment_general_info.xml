<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vchornenkyy.whatpulsehelper.GeneralInfoFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.vchornenkyy.whatpulsehelper.api.model.UserResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/accountLayout"
                style="@style/Block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAccountTitle"
                    style="@style/CardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account" />

                <TextView
                    android:id="@+id/tvUsernameLabel"
                    style="@style/CardText.Label"
                    android:layout_below="@id/tvAccountTitle"
                    android:text="Username" />

                <TextView
                    android:id="@+id/tvUsername"
                    style="@style/CardText.Value"
                    android:layout_below="@id/tvAccountTitle"
                    android:layout_toRightOf="@id/tvUsernameLabel"
                    android:text="@{user.accountName}"
                    tools:ignore="RtlHardcoded"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/tvCountryLabel"
                    style="@style/CardText.Label"
                    android:layout_below="@id/tvUsernameLabel"
                    android:text="Country"
                    android:visibility="@{user.country == null ? View.GONE : View.VISIBLE}" />

                <TextView
                    android:id="@+id/tvCountry"
                    style="@style/CardText.Value"
                    android:layout_below="@id/tvUsernameLabel"
                    android:layout_toRightOf="@id/tvCountryLabel"
                    android:text="@{user.country}"
                    android:visibility="@{user.country == null ? View.GONE : View.VISIBLE}"
                    tools:ignore="RtlHardcoded"
                    tools:text="TextView" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>