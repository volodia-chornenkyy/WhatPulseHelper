<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.vchornenkyy.whatpulsehelper.GeneralInfoFragment">

    <data>

        <variable
            name="user"
            type="com.vchornenkyy.whatpulsehelper.dto.User" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/accountLayout"
            style="@style/Block"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccountTitle"
                style="@style/CardTitle"
                android:text="Account" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Username"
                app:valueText="@{user.accountName}" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Country"
                app:valueText="@{user.country}" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvJoinedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Joined at"
                app:valueText="@{user.dateJoined}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalLayout"
            style="@style/Block"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPulseTitle"
                style="@style/CardTitle"
                android:text="Total" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvPulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Pulses"
                app:valueText="@{user.pulsesAmount}" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvKeysAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Keys"
                app:valueText="@{user.keysPressed}" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvClicksAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Clicks"
                app:valueText="@{user.clicksMade}" />

            <com.vchornenkyy.whatpulsehelper.ui.LabeledTextView
                android:id="@+id/tvUptimeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Uptime"
                app:valueText="@{user.uptime}" />
        </LinearLayout>
    </LinearLayout>
</layout>